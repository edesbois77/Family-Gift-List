generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Source {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  feed     String
  domain   String?
  articles Article[]

  @@index([name])
  @@index([feed])
}

model Article {
  id          Int       @id @default(autoincrement())
  sourceId    Int
  url         String    @unique
  title       String
  author      String?
  publishedAt DateTime?
  content     String?
  summary     String
  imageUrl    String?
  createdAt   DateTime  @default(now())

  // tagging and scoring
  teamTags   Json?
  teamTagIdx String    @default("")
  score      Int?
  ingestedAt DateTime?

  // summary meta
  summaryOrigin String?
  summaryModel  String?
  summaryChars  Int?
  summarizedAt  DateTime?

  source Source @relation(fields: [sourceId], references: [id])

  @@index([publishedAt, createdAt, id])
  @@index([sourceId])
  @@index([score])
  @@index([teamTagIdx])
}
